<div class="container form-login">
  <div class="row d-flex justify-content-center">
    <br>
    <div class="col-6 form-sign-up">
      <h3><%= t ".change_my_password" %></h3>
      <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, t(".new_password"), class: "control-label-required" %><br>
          <%= f.password_field :password, autofocus: true, autocomplete: t(".new_password"), class: "form-control" %>
          <%= display_error f.object, :password %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t(".confirm_new_password"), class: "control-label-required" %><br>
          <%= f.password_field :password_confirmation, autocomplete: t(".new_password"), class: "form-control" %>
          <%= display_error f.object, :password_confirmation %>
        </div>

        <div class="actions text-center text-bold">
          <br>
          <%= f.submit t(".change_my_password"), class: "btn btn-info font-weight-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
