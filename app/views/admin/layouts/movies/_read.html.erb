<!-- Modal -->
<div class="modal fade" id="<%= movie.slug %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" id="modal-read">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".detail_movie" %> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-borderless ">
          <tbody>
            <tr>
              <th><%= t ".title" %></th>
              <td><%= movie.title %> </td>
            </tr>
            <tr>
              <th><%= t ".image" %></th>
              <td><%= image_tag movie.image_url.to_s, id:"img-read" %> </td>
            </tr>
            <tr>
              <th><%= t ".background_image" %></th>
              <td>
                 <%= image_tag movie.background_url.to_s, id:"img-background" %>
              </td>
            </tr>
            <tr>
              <th><%= t ".slug" %></th>
              <td><%= movie.slug %></td>
            </tr>
            <tr>
              <th><%= t ".overview" %></th>
              <td><%= movie.overview %></td>
            </tr>
            <tr>
              <th><%= t ".genre" %></th>
              <td><%= movie.genre_name %></td>
            </tr>
            <tr>
              <th><%= t ".runtime" %></th>
              <td><%= movie.runtime %></td>
            </tr>
            <tr>
              <th><%= t ".director" %></th>
              <td><%= movie.director %></td>
            </tr>
            <tr>
              <th><%= t ".release_date" %></th>
              <td><%= movie.release_date %></td>
            </tr>
            <tr>
              <th><%= t ".trailer" %></th>
              <td>
                <iframe id="trailer" src="<%= movie.trailer %>" frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen>
                </iframe>
              </td>
            </tr>
            <tr>
              <th><%= t ".movie" %></th>
            <td><%= video_tag movie.film_url.to_s, controls: true, id: "film"%></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          <%= t ".close" %>
        </button>
      </div>
    </div>
  </div>
</div>
